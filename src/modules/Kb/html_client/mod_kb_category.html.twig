{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% block meta_title %}{{ category.title }}{% endblock %}

{% block body_class %}kb-category{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ '/kb'|link }}">{{ 'Knowledge base'|trans }}</a>
<li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="card ml-3 w-100">
        <div class="card-header">
            <h1>{{ category.title }}</h1>
            <p>{{ category.description }}</p>
        </div>
        <div class="card-body">
            <div class="list-group ml-2">
                {% for i, article in category.articles %}
                    <a class="list-group-item list-group-item-action" href="{{ '/kb'|link }}/{{article.category.slug}}/{{article.slug}}">{{ article.title }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" href="{{ 'kb'|link }}">{{ 'Back to list'|trans }}</a>
        </div>
    </div>
</div>
{% endblock %}
