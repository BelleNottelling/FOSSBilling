{% extends "layout_public.html.twig" %}

{% block meta_title %}{{ 'Log in'|trans }}{% endblock %}

{% block body_class %}page-login{% endblock %}
{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                {% if settings.login_page_show_logo %}
                    {% set company = guest.system_company %}
                        <a href="{{ settings.login_page_logo_url|default('/') }}" target="_blank">
                            <img src="{{ guest.system_company.logo_url }}" alt="{{ guest.system_company.name }}"/>
                        </a>
                {% else %}
                    <h1>{{ 'Login'|trans }}</h1>
                {% endif %}
                </div>
                <div class="card-body">
                    <form method="post" action="" id="client-login">
                        <div class="form-group">
                            <label for="email">{{ 'Email Address'|trans }}</label>
                            <input class="form-control" id="email" type="text" placeholder="{{ 'Your email address'|trans }}" name="email" value="{{ request.email }}" required="required" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'Password'|trans }}</label>
                            <input class="form-control" id="password" type="password" placeholder="{{ 'Password'|trans }}" name="password" required="required" value="{{ request.password }}">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">{{ 'Log in'|trans }}</button>
                    </form>
                </div>
                {% if settings.show_password_reset_link or settings.show_signup_link %}
                    <div class="card-footer">
                        <div class="row justify-content-center">
                            {% if settings.show_signup_link %}
                                <a class="btn btn-secondary btn-sm mr-2" href="{{ 'signup'|link }}">{{ 'Signup'|trans }}</a>
                            {% endif %}

                            {% if settings.show_password_reset_link %}
                                <a class="btn btn-secondary btn-sm" href="{{ 'password-reset'|link }}">{{ 'Forgot password?'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script type="text/javascript">
$(function() {
    $('#client-login').on('submit', function(event) {
        bb.post('guest/client/login',
            $(this).serialize(),
            function(result) {
                bb.redirect();
            }
        );

        return false;
    });
    {% if request.al %}
        $('#client-login').submit();
    {% endif %}
});
</script>
{% endblock %}
