{% extends "layout_public.html.twig" %}

{% block meta_title %}{{ 'Reset password'|trans }}{% endblock %}

{% block body_class %}page-password-reset{% endblock %}
{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                {% if settings.login_page_show_logo %}
                    {% set company = guest.system_company %}
                        <a href="{{ settings.login_page_logo_url|default('/') }}" target="_blank">
                            <img src="{{ guest.system_company.logo_url }}" alt="{{ guest.system_company.name }}"/>
                        </a>
                {% else %}
                    <h1>{{ 'Reset password'|trans }}</h1>
                {% endif %}
                </div>
                <div class="card-body">
                    <form method="post" action="" id="password-reset">
                        <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
                        <div class="form-group">
                            <label for="email">{{ 'Email Address'|trans }}</label>
                            <input class="form-control" id="email" type="text" placeholder="{{ 'Your email address'|trans }}" name="email" value="{{ request.email }}" required="required" autofocus>
                            <small class="form-text text-muted">{{ 'Enter your email to reset password. You will receive new password after reset link is confirmed.'|trans }}</small>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">{{ 'Reset password'|trans }}</button>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="row justify-content-center">
                        {% if settings.show_signup_link %}
                            <a class="btn btn-secondary btn-sm mr-2" href="{{ 'signup'|link }}">{{ 'Signup'|trans }}</a>
                        {% endif %}

                        {% if settings.show_password_reset_link %}
                            <a class="btn btn-secondary btn-sm" href="{{ 'login'|link }}">{{ 'Login'|trans }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block js %}
<script type="text/javascript">
$(function() {
    $('#password-reset').on('submit', function(event) {
        bb.post(
            'guest/client/reset_password',
            $(this).serialize(),
            function(result) {
                bb.msg("{{ 'A password reset confirmation email will be sent to you if we found an account with that email address.'|trans }}");
            }
        );

        return false;
    });
});
</script>
{% endblock %}
