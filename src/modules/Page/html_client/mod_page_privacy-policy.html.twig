{% extends "layout_default.html.twig" %}

{% block meta_title %}{{ 'Privacy Policy'|trans }}{% endblock %}

{% set company = guest.system_company %}

{% block body_class %}privacy-policy{% endblock %}

{% block content %}
<div class="row">
    <div class="card ml-0 ml-md-3 w-100">
        <div class="card-header">
            <h1>{{ company.name }} {{ 'Privacy Policy'|trans }}</h1>
            <p>{{ company.signature }}</p>
        </div>
        <div class="card-body">
            {{ company.privacy_policy|markdown }}
        </div>
        <div class="card-footer">
            <a href="{{ '/'|link}}" class="btn btn-primary" title="Back to Homepage">{{ 'Back to Homepage'|trans }}</a>
        </div>
    </div>
</div>
{% endblock %}
